{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI (Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "preLaunchTask": "Setup: Install Dependencies",
            "module": "uvicorn",
            "args": [
                "truledgr_api.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Run FastAPI (Production)",
            "type": "debugpy",
            "request": "launch",
            "preLaunchTask": "Setup: Install Production Dependencies",
            "module": "uvicorn",
            "args": [
                "truledgr_api.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "preLaunchTask": "Setup: Install Dependencies",
            "module": "pytest",
            "args": [
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
